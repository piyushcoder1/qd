// 1. Create a function which tells if the input number is even or odd.
const prompt=require("prompt-sync")();
let num=prompt("Enter the number:");
function even_or_odd(num){
    var validInput=/^[0-9]+$/;
    if(num.match(validInput)){
    if(num % 2 == 0){
        console.log(num +" is an Even Number");
        }
    else{
        console.log(num +":is an Odd");
        }
    }
    else{
        console.log("Enter Only Number Input");
    }
    }

    even_or_odd(num);
